{
	"name": "@alterdepression/auth",
	"license": "MIT",
	"version": "1.0.6",
	"author": "Vadzim Zakharov <zakharovvadzim@yandex.by>",
	"description": "An utils to simplify totp-authentication impementation based on Redis & Resend and others...",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"module": "./lib/index.mjs",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vzkharov/altr-auth.git"
	},
	"scripts": {
		"test": "bun test src --coverage --timeout 5000",
		"clean": "rm -rf .turbo node_modules lib",
		"build": "tsup ./src && cp README.md ./lib/ && cp package.json ./lib/ && cp LICENSE ./lib/",
		"check": "bunx @biomejs/biome check --apply ./src",
		"format": "bunx @biomejs/biome check --apply ./src",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@upstash/ratelimit": "^1.1.3",
		"@upstash/redis": "^1.30.0",
		"jose": "^5.2.4",
		"otp-generator": "^4.0.1",
		"resend": "3.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.2",
		"@morlay/bunpublish": "^0.3.0",
		"@types/bun": "^1.1.1",
		"@types/iconv": "^3.0.4",
		"@types/node": "^20.12.7",
		"@types/otp-generator": "^4.0.2",
		"@types/react": "^18.3.1",
		"bun-plugin-dts": "^0.2.3",
		"bun-types": "^1.1.7",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"lib/**"
	],
	"exports": {
		".": {
			"import": {
				"types": "./lib/index.d.ts",
				"default": "./lib/index.js"
			},
			"require": {
				"types": "./lib/index.d.ts",
				"default": "./lib/index.js"
			}
		},
		"./providers": {
			"import": {
				"types": "./lib/providers.d.ts",
				"default": "./lib/providers.js"
			},
			"require": {
				"types": "./lib/providers.d.ts",
				"default": "./lib/providers.js"
			}
		}
	},
	"typesVersions": {
		"*": {
			".": [
				"./lib/index.d.ts"
			],
			"./providers": [
				"./lib/providers.d.ts"
			]
		}
	},
	"keywords": [
		"redis",
		"totp",
		"auth",
		"edge",
		"upstash"
	],
	"bugs": {
		"url": "https://github.com/vzkharov/altr-auth/issues"
	},
	"homepage": "https://github.com/vzkharov/altr-auth#readme",
	"trustedDependencies": [
		"@biomejs/biome"
	],
	"directories": {
		"lib": "lib"
	}
}
