{
  "name": "@alterdepression/auth",
  "license": "MIT",
  "version": "1.0.2",
  "author": "Vadzim Zakharov <zakharovvadzim@yandex.by>",
  "description": "An utils to simplify totp-authentication impementation based on Redis & Resend and others...",
  "main": "./nodejs.js",
  "module": "./nodejs.mjs",
  "types": "./lib/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vzkharov/altr-auth.git"
  },
  "scripts": {
    "test": "bun test src --coverage",
    "clean": "rm -rf .turbo node_modules lib",
    "build": "bun run ./scripts/build.ts",
    "check": "bunx @biomejs/biome check --apply ./src",
    "format": "bunx @biomejs/biome check --apply ./src"
  },
  "dependencies": {
    "@morlay/bunpublish": "^0.3.0",
    "@upstash/ratelimit": "^1.1.3",
    "@upstash/redis": "^1.30.0",
    "jose": "^5.2.4",
    "node-rocketsms-api": "^1.1.1",
    "otp-generator": "^4.0.1",
    "resend": "3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@types/bun": "^1.1.1",
    "@types/node": "^20.12.7",
    "@types/otp-generator": "^4.0.2",
    "@types/react": "^18.3.1",
    "bun-plugin-dts": "^0.2.3",
    "bun-types": "^1.1.6",
    "lerna": "^8.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./providers": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/providers/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/providers/index.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "./providers": [
        "./lib/index.d.ts"
      ]
    }
  },
  "keywords": [
    "redis",
    "totp",
    "auth",
    "edge",
    "upstash"
  ],
  "bugs": {
    "url": "https://github.com/vzkharov/altr-auth/issues"
  },
  "homepage": "https://github.com/vzkharov/altr-auth#readme",
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "directories": {
    "lib": "lib"
  }
}
